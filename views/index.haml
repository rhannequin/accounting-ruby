%html
  %head
    %title Accounting
  %body
    %h1 Accounting
    %h2 Current money: #{current_money}â‚¬
    - data.each do |month, expenses|
      %table
        %caption= I18n.l(month, format: :long)
        %thead
          %tr
            %th Date
            %th Way
            %th Reason
            %th Price
            %th Categories
        %tbody
          - expenses.each do |expense|
            %tr
              %td= I18n.l(expense[:date], format: :short)
              %td= expense[:way]
              %td= expense[:reason]
              %td= expense[:price]
              %td= expense[:categories].join(', ')
      %br

<div class="page-header">
  <%= link_to expenses_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_expense_path(@expense), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show expense</h1>
</div>

<dl class="dl-horizontal">
  <dt>Date:</dt>
  <dd><%= @expense.date %></dd>

  <dt>Reason:</dt>
  <dd><%= @expense.reason %></dd>

  <dt>Price:</dt>
  <dd><%= @expense.price %></dd>

  <dt>Way:</dt>
  <dd><%= @expense.way %></dd>

</dl>

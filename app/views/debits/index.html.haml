.page-header
  = link_to new_debit_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t :'.new_debit'
  %h1= t :'.title'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t :'activerecord.attributes.debit.reason'
        %th= t :'activerecord.attributes.debit.price'
        %th= t :'activerecord.attributes.debit.way'
        %th= t :'activerecord.attributes.debit.start_date'
        %th= t :'activerecord.attributes.debit.end_date'
        %th{colspan: 3}
    %tbody
    - @debits.each do |debit|
      %tr
        %td= debit.reason
        %td= currency debit.price
        %td= debit.way
        %td= l debit.start_date
        %td= debit.end_date ? l(debit.end_date) : '&empty;'.html_safe
        %td.action= link_to t(:'scaffold.show'), debit, class: 'btn btn-info'
        %td.action= link_to t(:'scaffold.edit'), edit_debit_path(debit), class: 'btn btn-warning'
        %td.action= link_to t(:'scaffold.destroy'), debit, method: :delete, data: { confirm: t(:'scaffold.are_you_sure') }, class: 'btn btn-danger'

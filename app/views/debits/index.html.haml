.page-header
  = link_to account_path(@account), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t :'scaffold.back'
  = link_to new_account_debit_path(@account), class: 'btn btn-success' do
    %span.glyphicon.glyphicon-plus
    = t :'.new_debit'
  %h1= t :'.title'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t :'activerecord.attributes.debit.reason'
        %th= t :'activerecord.attributes.debit.price'
        %th= t :'activerecord.attributes.debit.day'
        %th= t :'activerecord.attributes.debit.way'
        %th= t :'activerecord.attributes.debit.tags'
        %th= t :'activerecord.attributes.debit.start_date'
        %th= t :'activerecord.attributes.debit.end_date'
        %th{colspan: 3}
    %tbody
      - @debits.each do |debit|
        %tr
          %td= debit.reason
          %td= number_to_currency debit.price
          %td= debit.day
          %td= debit.way
          %td= render partial: 'tags/list', locals: { account_id: @account, tags: debit.tags }
          %td= l debit.start_date
          %td= debit.end_date ? l(debit.end_date) : '&empty;'.html_safe
          %td.action
            = link_to t(:'scaffold.show'),
                      account_debit_path(@account, debit),
                      class: 'btn btn-info'
          %td.action
            = link_to t(:'scaffold.edit'),
                      edit_account_debit_path(@account, debit),
                      class: 'btn btn-warning'
          %td.action
            = link_to t(:'scaffold.destroy'),
                      account_debit_path(@account, debit),
                      method: :delete,
                      data: { confirm: t(:'scaffold.are_you_sure') },
                      class: 'btn btn-danger'

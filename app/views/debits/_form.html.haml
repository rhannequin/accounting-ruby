= simple_form_for([@account, @debit], html: { class: 'form-horizontal', role: 'form' }, wrapper: :horizontal_form) do |f|

  = f.error_notification

  = f.input :reason, wrapper: :horizontal_input_group do
    %span.input-group-addon
      %span.glyphicon.glyphicon-pencil{ 'aria-hidden' => true }
    = f.text_field :reason, class: 'form-control', placeholder: true

  = f.input :price, wrapper: :horizontal_input_group do
    %span.input-group-addon
      %span.glyphicon.glyphicon-euro{ 'aria-hidden' => true }
    = f.text_field :price, as: :string, class: 'form-control', placeholder: true

  = f.input :day

  = f.input :way

  - [:start_date, :end_date].each do |date_input|
    = f.input date_input, wrapper: :horizontal_input_group do
      %span.input-group-addon
        %span.glyphicon.glyphicon-calendar{ 'aria-hidden' => true }
      = render partial: 'shared/datepicker_input', locals: { f: f, date_input: date_input }

  = f.association :tags, collection: @tags,
                         as: :check_boxes,
                         wrapper: :horizontal_radio_and_checkboxes,
                         item_wrapper_class: 'col-sm-3'

  .form-group.text-right
    = f.submit class: 'btn btn-primary'

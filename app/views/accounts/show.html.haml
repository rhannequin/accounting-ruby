.page-header
  = link_to accounts_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t :'scaffold.back'
  = link_to edit_account_path(@account), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    = t :'scaffold.edit'
  %h1= t :'.title'

%h2= number_to_currency(@account.current_amount)

- @expenses.each do |month, expenses|
  %h2= l(month, format: :year_and_month).capitalize

  .table-responsive
    %table.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th= t :'activerecord.attributes.expense.date'
          %th= t :'activerecord.attributes.expense.reason'
          %th= t :'activerecord.attributes.expense.price'
          %th= t :'activerecord.attributes.expense.way'
          -# %th= t :'activerecord.attributes.expense.tags'
          -# %th{colspan: 3}
      %tbody
        - expenses.each do |expense|
          %tr{ class: ('success' if expense.price > 0) }
            %td= l expense.date
            %td= expense.reason
            %td= number_to_currency expense.price
            %td= expense.way
            %td= render partial: 'tags/list', locals: { tags: expense.tags }

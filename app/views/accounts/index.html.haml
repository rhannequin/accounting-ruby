.page-header
  = link_to new_account_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t :'.new_account'
  %h1= t :'.title'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th= t :'activerecord.attributes.account.name'
        %th= t :'activerecord.attributes.account.current_amount'
        %th{colspan: 3}
    %tbody
      - @accounts.each do |account|
        %tr
          %td= account.name
          %td= currency account.current_amount
          -# %td.action= link_to t(:'scaffold.show'), debit, class: 'btn btn-info'
          %td.action= link_to t(:'scaffold.edit'), edit_account_path(account), class: 'btn btn-warning'
          %td.action= link_to t(:'scaffold.destroy'), account, method: :delete, data: { confirm: t(:'scaffold.are_you_sure') }, class: 'btn btn-danger'

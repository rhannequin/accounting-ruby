.page-header
  = link_to edit_tag_path(@tag), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    = t :'scaffold.edit'
  = link_to chart_tag_path(@tag), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-stats
    = t :'activerecord.attributes.tag.chart'
  %h1= t :'.title'

%h3= Tag.human_attribute_name(:name)

%h4= @tag.name

%h3= Tag.human_attribute_name(:ignored)

%h4= t(@tag.ignored?.to_s).capitalize

%h3= t :'.use'

%p= t :'.use_count',
    { count: @expenses_count + @debits_count,
      expenses: @expenses_count,
      expense_model: Expense.model_name.human(count: @expenses_count),
      debits: @debits_count,
      debit_model: Debit.model_name.human(count: @debits_count) }
